<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Rayhan Almer</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
  </head>
  <body>
    <nav class="navbar" style="background-color: rgb(70, 185, 38);">
    <div class="container-fluid">
      <a class="navbar-brand" style="margin: auto;">
        Rayhan Almer
      </a>
    </div>
  </nav>
  <div  class="container">
  <table class="table">
    <thead>
      <tr>
        <th scope="col" style="width: auto;">ID</th>
        <th scope="col" style="width: auto;">Nama</th>
        <th scope="col" style="width: auto;">NIT</th>
        <th scope="col" style="width: auto;">NoTelp</th>
        <th scope="col" style="width: auto;">Action</th>
      </tr>
    </thead>
    <tbody>
      <% if (user) { %> <% user.forEach ((item)=>{ %>
      <tr>
        <th scope="row"><%= item.ID %></th>
        <td><%= item.NAMA %></td>
        <td><%= item.NIT %></td>
        <td><%= item.NOTELP %></td>
        <td>
          <a class="btn btn-success" href="edit/<%= item.ID %>">Edit</a>
          <a class="btn btn-danger" href="delete/<%= item.ID %>"
          >
          Hapus
        </button>
      </td>
      </tr>
    <tr>
    <%}) %>    <% } %>
    </tbody>
  </table>
  <!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
  Tambah Data
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">
          Modal title
        </h1>
        <button type="button" 
        class="btn-close" 
        data-bs-dismiss="modal" 
        aria-label="Close"
        ></button>
      </div>
      <form action="" method="post">
        <div class="mb-3 container">
          <label for="exampleFormControlInput1" class="form-label"
            >ID</label
          >
          <input 
            type="ID"
            name="ID" 
            class="form-control" 
            id="exampleFormControlInput1" 
            placeholder="Input ID"
            />
        </div>
        <div class="mb-3 container">
          <label for="exampleFormControlInput1" 
            class="form-label">
            >NAMA</label
          >
          <input 
            type="NAMA" 
            name="NAMA"
            class="form-control" 
            id="exampleFormControlInput1" 
            placeholder="Input NAMA"
            />
        </div>
        <div class="mb-3 container">
          <label for="exampleFormControlInput1" 
            class="form-label">
            >NIT</label
          >
          <input 
            type="NIT" 
            name="NIT"
            class="form-control" 
            id="exampleFormControlInput1" 
            placeholder="Input NIT"
          />
        </div>
        <div class="mb-3 container">
          <label for="exampleFormControlInput1" 
            class="form-label"
            >NOTELP</label
          >
          <input 
            type="NOTELP" 
            name="NOTELP"
            class="form-control" 
            id="exampleFormControlInput1" 
            placeholder="Input NOTELP"
          />
        </div>
        <div class="modal-footer">
          <button 
          type="button" 
          class="btn btn-secondary" 
          data-bs-dismiss="modal"
        >
          Close
        </button>
        <button type="submit" class="btn btn-primary">
          Save changes
        </button>
        </div>
      </form>
    </div>
  </div>
</div>
</html>